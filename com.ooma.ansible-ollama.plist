<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.ooma.ansible-ollama</string>
    <key>ProgramArguments</key>
    <array>
        <string>/export/ollama/bin/python3</string>
        <string>/usr/local/bin/app.py</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>
    <key>StandardOutPath</key>
    <string>/var/log/ansible-ollama.log</string>
    <key>StandardErrorPath</key>
    <string>/var/log/ansible-ollama.error.log</string>
</dict>
</plist>
